@using Microsoft.Extensions.Localization;
@using Kamigo.Data.Models;
@inject IStringLocalizer<App> Localizer;

<div class="card gx-3" style="width: 18rem; margin-right:20px;">
    <img class="card-pokemon-img-top" src=@Game.ImageUrl alt="@Game.Name">
    <div class="card-body">
        <h5 class="card-title">@Game.Name</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Localizer["game-generation_label"] : @Game.Generation</li>
        <li class="list-group-item">@Localizer["game-region_label"] : @Game.Region</li>
    </ul>
    <a href="/@PlayerId/pokedex/generation/@Game.Generation/region/@Game.Region" class="btn btn-primary">@Localizer["my-pokedex_button"]</a>
</div>

@code {
    [Parameter]
    public PokemonGame Game { get; set; }
    [Parameter]
    public string PlayerId { get; set; }
}
